<div class="m-5">
  <h1>Avaliar Serviço: <%= @service.title %></h1>

  <%= form_with model: [ @service, @review ] do |form| %>
    <div class="mb-3">
      <%= form.label :rating, "Nota (1 a 5)" %>
      <%= form.number_field :rating, in: 1..5, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :content, "Comentário" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <%= form.submit "Enviar Avaliação", class: "btn btn-primary" %>
  <% end %>
</div>