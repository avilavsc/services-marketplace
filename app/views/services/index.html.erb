<h1>Serviços Disponíveis</h1>

<%= search_form_for @q do |form| %>
  <%= form.label :title_or_description_cont, "Buscar Serviços" %>
  <%= form.search_field :title_or_description_cont %>
  <%= form.submit "Buscar" %>
<% end %>

<span>Ordenar por: </span><%= sort_link(@q, :title) %>

<% @services.each do |service| %>
  <h2><%= link_to service.title, service %></h2>
  <p><%= number_to_currency(service.price) %></p>
  <p><%= truncate(service.description, length: 100) %></p>
<% end %>
